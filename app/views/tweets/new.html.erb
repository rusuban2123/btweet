<%= form_with(model: @tweet, url: tweets_path, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :datetime, "日時" %><br />
    <%= f.datetime_field :datetime %>
  </div>
 
  <div class="field">
    <%= f.label :level, "熟練度" %><br />
    <%= f.collection_select(:level_id, Level.all, :id, :name, {include_blank: "---"}, {class:"select-box"}) %>
  </div>

  <div class="field">
    <%= f.label :recruitment, "募集人数" %><br />
    <%= f.text_field :recruitment, class: :form__text %>
  </div>
 
  <div class="field">
    <%= f.label :prefectre, "都道府県" %><br />
    <%= f.collection_select(:prefectre_id, Prefectre.all, :id, :name, {include_blank: "---"}, {class:"select-box"}) %>
  </div>
 
  <div class="field">
    <%= f.label :city, "市町村" %><br />
    <%= f.text_field :city, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :court, "コート名" %><br />
    <%= f.text_field :court %>
  </div>

  <div class="field">
    <%= f.label :detail, "詳細説明" %><br />
    <%= f.text_area :detail %>
  </div>

    <div class="field">
    <%= f.label :image, "現地画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>

<% end %>